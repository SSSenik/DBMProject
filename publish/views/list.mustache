<html>
    <head>
        <title>{{title}}</title>
        <script>
            function remove(id) {
                var xhttp = new XMLHttpRequest();
                xhttp.onreadystatechange = function() {
                    if (this.readyState == 4 && this.status == 200) {
                        document.getElementById("{{title}}_" + id).remove();
                    }
                };
                xhttp.open("DELETE", "/api/{{title}}/" + id, true);
                xhttp.send();
            }
        </script>
    </head>
    <body>
        <table>
            <tr>
                {{#columns}}
                <th>{{.}}</th>
                {{/columns}}
            </tr>
            {{#rows}}
            <tr id="{{rowId}}">
                {{#properties}}
                <td>
                    {{.}}
                </td>
                {{/properties}}
                {{#actions}}
                <td>
                    <a href="{{link}}" title="{{tooltip}}" {{#events}}{{name}}="javascript:
                    {{function}}({{args}})" {{/events}}>
                        {{#image}}
                        <img src="{{src}}" alt="{{alt}}" />
                        {{/image}}
                    </a>
                </td>
                {{/actions}}
            </tr>
            {{/rows}}
        </table>
    </body>
</html>